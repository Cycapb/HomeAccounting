@model List<HomeAccountingSystem_DAL.Model.Product>
<table class="table table-striped" id="Products">
    <tr>
        <th>Добавить</th>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Цена</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">Нет подкатегорий</td>
        </tr>
    }
    else
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    <input type="checkbox" name="Products[@i].ProductID" value="@Model[i].ProductID"/>
                </td>
                <td>
                    @Model[i].ProductName
                    @Html.Hidden("Products[" + i + "].ProductName", Model[i].ProductName)
                </td>
                <td>
                    @Model[i].Description
                </td>
                <td>
                    @Html.TextBox("Products[" + i + "].Price", Model[i].Price,new {@class = "form-control", placeholder = "Цена"})
                </td>
            </tr>
        }
    }
</table>
