@model WebUI.Abstract.IReportMenu

<script type="text/javascript">
    function onButtonClick(id) {
        $("#" + id).addClass("btn btn-primary").siblings().removeClass("btn-primary");
        return false;
    }
</script>

@foreach (var item in Model.Items)
{
    if (item.Id != 3)
    {
        @Ajax.ActionLink(item.Name, "CreateByTypeOfFlowView", "Report",
            new {id = item.Id},
            new AjaxOptions()
            {
                UpdateTargetId = "reportPanelBody"
            }, new {@class = "btn btn-block btn-raised btn-default", id = item.Id.ToString(), onclick = "onButtonClick(this.id)"}
            )
    }
    else
    {
        @Ajax.ActionLink(item.Name, "CreateByDatesView", "Report",
            new {id = item.Id},
            new AjaxOptions()
            {
                UpdateTargetId = "reportPanelBody"
            }, new {@class = "btn btn-block btn-raised btn-default", id = item.Id.ToString(), onclick = "onButtonClick(this.id)"}
            )
    }
}
