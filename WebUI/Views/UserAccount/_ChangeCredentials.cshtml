@model AccUserModel

<div class="userContainer">
    <div class="well">
        @using (Ajax.BeginForm(new AjaxOptions()
        {
            UpdateTargetId = "payingItemMainBody"
        }))
        {
            @Html.ValidationSummary(true)
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Имя" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Фамилия" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
            </div>
            <input type="submit" value="Сохранить" class="btn btn-success btn-raised btn-sm" />
            @Ajax.ActionLink("Отмена", "ViewCredentials", null, new AjaxOptions()
            {
                Url = Url.Action("ViewCredentials"),
                UpdateTargetId = "payingItemMainBody"
            }, new {@class = "btn btn-danger btn-raised btn-sm pull-right"})
        }
    </div>
</div>
