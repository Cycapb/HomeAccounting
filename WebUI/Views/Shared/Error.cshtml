@model IEnumerable<string>
@{ ViewBag.Title = "Error";}
<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Что-то пошло не так. Попробуйте еще раз
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Были обнаружены следующие ошибки:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "Index","PayingItem", null, new { @class = "btn btn-default" })
