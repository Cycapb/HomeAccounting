@model WebUI.Models.CreateModel
@{
    ViewBag.Title = "Создание пользователя";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="userContainer">
    <div class="well">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control",placeholder="Имя" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control",placeholder= "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="form-group">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control",placeholder="Пароль" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <input type="submit" value="Создать" class="btn btn-success btn-raised btn-sm" />
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default btn-raised btn-sm" })
        }
    </div>
</div>