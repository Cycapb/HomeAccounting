@model Account
<div class="panel panel-primary">
    <div class="panel-heading">Редактирование счета: @Model.AccountName</div>
    <form asp-action="Edit" method="post" asp-antiforgery="true" data-ajax="true" data-ajax-mode="replace" data-ajax-method="post"
          data-ajax-update="#payingDiv" data-ajax-success="updateAfterTransfer" data-ajax-url="@Url.Action("Edit")">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="panel-body">
            <input type="hidden" name="AccountId" value="@Model.AccountID" />
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <div class="form-group">
                <label class="form-group">Название:</label>
                <input asp-for="AccountName" class="form-control" />
                <div><span asp-validation-for="AccountName" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label class="form-group">Сумма:</label>
                <input asp-for="Cash" class="form-control" />
                <div><span asp-validation-for="Cash" class="text-danger"></span></div>
            </div>
            <div class="checkbox">
                <label>
                    @if (Model.Use)
                    {
                        <input data-val="true" id="Use" name="Use" type="checkbox" value="true" checked="checked">
                    }
                    else
                    {
                        <input data-val="true" id="Use" name="Use" type="checkbox" value="true">
                    }
                    <span class="checkbox-material"><span class="check"></span></span>
                    Отображать в текущем бюджете
                </label>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Сохранить" class="btn btn-success btn-raised btn-sm" />
            <a data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#payingDiv" asp-action="@Url.Action("Index")"
               data-ajax-url="@Url.Action("Index")" class="btn btn-default btn-raised btn-sm">Назад</a>
        </div>
    </form>
</div>