@model IEnumerable<Product>

<table class="table table-striped" id="productsTable">
    <tr>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Нет подкатегорий</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Description</td>
                    <td>
                        <form asp-action="Delete" asp-antiforgery="true" asp-route-id="@item.ProductID" method="post" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace"
                              data-ajax-update="#productsTable" data-ajax-url="@Url.Action("Delete", new { id = item.ProductID })">
                            <a asp-action="Edit" asp-route-id="@item.ProductID" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#productsTable"
                               data-ajax-url="@Url.Action("Edit", new { id = item.ProductID })">
                                Редактировать
                            </a>
                            <input type="submit" value="Удалить" class="btn btn-danger btn-raised btn-xs" />
                        </form>
                        }
                    </td>
                </tr>
            }
        }   
    </tbody>
</table>
