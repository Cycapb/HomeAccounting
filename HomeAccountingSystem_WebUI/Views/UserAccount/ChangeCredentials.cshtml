@model HomeAccountingSystem_WebUI.Models.AccUserModel
@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="userContainer">
    <div class="well">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Имя" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Фамилия" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
            </div>
            <input type="submit" value="Сохранить" class="btn btn-success btn-raised btn-sm" />
            @Html.ActionLink("Отмена", "ViewCredentials", null, new { @class = "btn btn-danger btn-raised btn-sm pull-right" })
        }
    </div>
</div>
