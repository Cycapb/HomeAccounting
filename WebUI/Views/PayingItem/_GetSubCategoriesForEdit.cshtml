@model List<Product>

@if (Model.Count != 0)
{
    <div class="form-group" id="subcategoriesDiv">
        <div><label>Подкатегории</label></div>
        <table class="table table-striped" id="productsEditTable">
            <tr>
                <th>Добавить</th>
                <th>Наименование</th>
                <th>Описание</th>
                <th>Цена</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <td>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="PricesAndIdsInItem[@i].Id" value="@Model[i].ProductID" />
                            <span class="checkbox-material"><span class="check"></span></span>
                        </label>
                    </div>
                </td>
                <td>
                    @Model[i].ProductName
                </td>
                <td>
                    @Model[i].Description
                </td>
                <td>
                    @Html.TextBox("PricesAndIdsInItem[" + i + "].Price", Model[i].Price, new { @class = "form-control", placeholder = "Цена" })
                </td>
            </tr>
            }
        </table>
    </div>
}
else
{
    <div class="form-group" id="subcategoriesDiv"></div>
}

<script type="text/javascript">
    $(document).ready(function () {
        showSubcategoriesCheckBoxClick();
    });
</script>

