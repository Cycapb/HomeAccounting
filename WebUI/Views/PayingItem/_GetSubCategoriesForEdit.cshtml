@model List<Product>
<table class="table table-striped" id="Products">
    <tr>
        <th>Добавить</th>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Цена</th>
    </tr>
    @if (Model.Any())
    {
        for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="checkbox" name="PricesAndIdsInItem[@i].Id" value="@Model[i].ProductID"/>
                </td>
                <td>
                    @Model[i].ProductName
                </td>
                <td>
                    @Model[i].Description
                </td>
                <td>
                    @Html.TextBox("PricesAndIdsInItem[" + i + "].Price", Model[i].Price, new { @class = "form-control", placeholder = "Цена" })
                </td>
            </tr>
        }
    }
</table>
@if (Model.Count != 0)
{
    <script type="text/javascript">
            $(function() {
                $('#sumInputDiv').attr('hidden', true);
                $('#sumInputDiv').val('0');
            });
    </script>
}
