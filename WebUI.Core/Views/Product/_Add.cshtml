@model Product

<form asp-action="Add" method="post" class="form-inline" asp-antiforgery="true" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#productsDiv" 
      data-ajax-url="@Url.Action("Add")" data-ajax-method="post">
    <div class="panel-body">
        <input asp-for="UserID" type="hidden" />
        <input asp-for="CategoryID" type="hidden"/>
        <div class="form-group">
            <label>Наименование</label>
            <input asp-for="ProductName" class="form-control"/>
            <div><span asp-validation-for="ProductName" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label>Описание</label>
            <input asp-for="Description" class="form-control"/>
        </div>
        <input type="submit" class="btn btn-success btn-raised btn-sm" value="Добавить" />
    </div>
</form>