@model Product

<form asp-action="Add" method="post" class="form-inline" asp-antiforgery="true" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#productsDiv" 
      data-ajax-url="@Url.Action("Add")" data-ajax-method="post">
    <div class="panel-body">
        @Html.HiddenFor(x => x.ProductID)
        @Html.HiddenFor(x => x.UserID)
        <input type="hidden" id="CategoryID" name="CategoryID" value="@ViewBag.CategoryId" />
        @Html.ValidationMessageFor(x => x.ProductName)
        <div class="form-group">
            <label class="form-group">Наименование</label>
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="form-group">Описание</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-success btn-raised btn-sm" value="Добавить" />
    </div>
</form>