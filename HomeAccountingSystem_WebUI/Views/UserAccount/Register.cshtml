@model HomeAccountingSystem_WebUI.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="registerContainer">
    <div class="panel panel-info">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Login, new {@class = "form-control",placeholder= "Придумайте логин" })
                    @Html.ValidationMessageFor(x => x.Login)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control",placeholder= "Введите email" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x => x.Password, new {@class = "form-control", placeholder = "Придумайте пароль (не менее 6 символов)" })
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x => x.ConfirmPassword, new {@class = "form-control", placeholder = "Подтверждение пароля"})
                    @Html.ValidationMessageFor(x => x.ConfirmPassword)
                </div>
                <input type="submit" value="Зарегистрироваться" class="btn btn-success btn-raised btn-sm"/>
                @Html.ActionLink("Отмена", "Login", null, new {@class = "btn btn-danger btn-raised btn-sm pull-right"})
                ;
            }
        </div>
    </div>
</div>
