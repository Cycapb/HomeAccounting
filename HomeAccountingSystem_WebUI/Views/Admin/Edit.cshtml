@model HomeAccountingSystem_WebUI.Models.EditModel
@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="userContainer">
    <div class="well">
        <div class="form-group">
            <label>Id</label>
            <p class="form-control-static">@Model.Id</p>
        </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Пароль" />
            </div>
            <input type="submit" value="Сохранить" class="btn btn-success btn-raised btn-sm" />
            @Html.ActionLink("Отменить", "Index", null, new { @class = "btn btn-default btn-raised btn-sm" })
        }
    </div>
</div>


