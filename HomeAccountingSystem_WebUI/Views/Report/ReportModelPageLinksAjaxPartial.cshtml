@model HomeAccountingSystem_WebUI.Models.ReportModel

<script type="text/javascript">
    function onButtonClick(id) {
        $('#'+id).addClass("btn btn-primary").siblings().removeClass("btn-primary");
        return false;
    }
</script>

@if (Model.CategoryId == 0)
{
    for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
    {
        @Ajax.ActionLink(i.ToString(), "GetByDatesReport", new
   {
       catId = Model.CategoryId,
       dtFrom = Model.DtFrom,
       dtTo = Model.DtTo,
       page = i
   }, new AjaxOptions()
   {
       Url = Url.Action("GetByDatesReportPartial", new
       {
           catId = Model.CategoryId,
           dtFrom = Model.DtFrom,
           dtTo = Model.DtTo,
           page = i
       }),
       UpdateTargetId = "reportTable"
   }, new {@class = "btn btn-default btn-raised btn-round btn-xs", id = i.ToString(), onclick= "onButtonClick(this.id)" })
    }
}
else
{
    for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
    {
        @Ajax.ActionLink(i.ToString(), "GetTypeOfFlowReport", new
   {
       catId = Model.CategoryId,
       dtFrom = Model.DtFrom,
       dtTo = Model.DtTo,
       page = i
   }, new AjaxOptions()
   {
       Url = Url.Action("GetByTypeOfFlowReportPartial", new
       {
           catId = Model.CategoryId,
           dtFrom = Model.DtFrom,
           dtTo = Model.DtTo,
           page = i
       }),
       UpdateTargetId = "reportTable"
   }, new {@class = "btn btn-default btn-raised btn-round btn-xs", id = i.ToString(), onclick = "onButtonClick(this.id)" })
    }
}
